<div class="pt-3">
</div>

<div class="container">
  <% @portfolio.posts.each do |p| %>
    <h3>
      <strong><%= p.title %></strong>
    </h3>
    <div>
      <div class="text-black-50">
        <p>
          <%= p.subtitle %>
        </p>
      </div>

      <div class="post-timestamp">
        <p>
          <i class="far fa-clock fa-fw"></i></i>
          <%= time_ago_in_words(p.created_at) %> ago
        </p>
      </div>
      
      <div class="writing pt-4 pb-4">
        <p>
          <%= p.body%>
        </p>
      </div>
    </div>
  <% end %>
</div>