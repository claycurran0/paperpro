<div class="pt-3">
</div>

<table class="table table-sm table-hover small" >
  <thead>
    <tr>
      <th>
        Asset
      </th>
      
      <th>
        Ticker
      </th>
      
      <th>
        Buy/Sell
      </th>

      <th>
        Shares
      </th>

      <th>
        Price
      </th>

      <th>
        Total Amount
      </th>
      <th>
        Time
      </th>
    </tr>
  </thead>
  <tbody>
    <% @portfolio.trades.order(:created_at).reverse.each do |t| %>
    <tr>
      <td>
        <%= t.asset.name %></a>
      </td>
       <td>
        <%= t.asset.ticker %></a>
      </td>
      <td>
        <%= t.quantity > 0 ? "Buy" : "Sell" %></a>
      </td>
      <td>
        <%= t.quantity.abs %></a>
      </td>
      <td>
        <%= number_to_currency(t.price) %></a>
      </td>
      <td>
        <%= number_to_currency(t.price * t.quantity.abs) %></a>
      </td>
      <td>
        <%= t.created_at.to_formatted_s(:short)  %></a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>